<script lang="javascript" type="text/javascript">
    $('#btnAdd').click(function () {
        $('#drpMonth').val('');
        $('#drpYear').val('');
    });
    $(document).ready(function () {

        //$("#btnSave").click(function () {
        $('#btnView').click(function () {
            $("#divLoading").show();
            debugger;
            
            var mm = $('#drpMonth').val();
            var yr = $('#drpYear').val();

            if (mm == "") {
                mm = 0;
            }            
            $.ajax(
            {
                url: '@Url.Action("getData", "Salary")',
                type: "GET",
                datatype: "JSON",
                data: {year:yr,month:mm },

                success: function (gr) {
                    debugger;
                    $("#dvData").html("");  // clear before appending new list 
                    $("#dvData").append(gr);
                    $("#divLoading").hide();

                }

            });

            
        });
        
    });
</script>
